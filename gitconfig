# vim: filetype=gitconfig
# use (git 1.7.10+)
# NOT WORKING $DOTFILES VARIABLE
# [include]
#     path = ~/dotfiles/gitconfig

[core]
    editor = vim
    attributesfile = ~/dotfiles/gitattributes
    excludesfile = ~/dotfiles/gitignore
    autocrlf = no
    quotepath = no
    precomposeunicode = yes
[log]
    #date = iso8601
    date = format:%y-%m-%d %H:%M
    decorate = auto
[help]
    autocorrect = 1
[color]
    ui = true
[merge]
    tool = vimdiff
[branch]
    autosetuprebase = always
[push]
    default = simple
[pull]
    rebase = true
[interactive]
    diffFilter = diff-highlight
[pager]
    #log = diff-highlight | vim -R +'setfiletype gitlog' +'setlocal buftype=nofile' -
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[diff]
    renames = true
    tool = vimdiff
    algorithm = histogram
    compactionHeuristic = true
[pretty]
    logfmt = %C(green)%h %C(reset)%ad %C(blue)%an %C(red)%d %C(reset)%s
[alias]
    gr = log --graph --oneline --format=logfmt
    gra = log --graph --oneline --all --format=logfmt
    lg = log --graph --stat --find-renames
    lgp = log --graph --stat --find-renames -p origin/master..

    d = diff
    ds = diff --staged
    dw = diff --color-words
    dws = diff --color-words --staged

    st = status --short --branch

    a = add
    ap = add --patch
    ae = add --edit

    c = commit
    cv = commit -v
    cva = commit -va

    co = checkout
    br = branch

    p = pull
    pp = pull --prune --ff-only
    pr = pull --autostash --ff-only
    prp = pull --prune --autostash --ff-only
    pu = push
    puu = push -u
    puo = push origin HEAD
    #echo = !echo testecho
